<Window x:Class="HungVuong_WPF_C2_B1.Modal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HungVuong_WPF_C2_B1"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Red"
        Title="Modal" Height="200" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Bạn có chắc muốn xóa?" FontWeight="Bold" HorizontalAlignment="Center"
                       FontSize="32"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Xác nhận" Margin="0,0,10,0" Width="150" Height="100"
                        FontSize="20"
                        Click="OK_Click"/>
                <Button Content="Hủy" Width="150" FontSize="20"
                        Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>